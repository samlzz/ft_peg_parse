server {
	listen localhost:8080;

	error_page 404 ./error_pages/404_error.html;
	error_page 400 ./error_pages/400_error.html;
	error_page 403 ./error_pages/403_error.html;

    root /files/jeancerveur_files;
	index index.html;

	location /nope {
		return 301 "http://0.0.0.0:8080/blog/"   ;
	}

	location /blog {
		methods GET POST;
		index blog.html;
		cgi_ext .php;
		cgi_path ./files/cgi/php-cgi;
	}
	
	location /uploaded {
		methods POST GET;
		upload_store ./files/jeancerveur_files/uploaded;
		autoindex on;
	}
}

server {
	listen localhost:6666;

	error_page 500 ./error_pages/50X_error.html;

	root /files/samserver_files;
	index sam_index.html;
}

